@model UserApp
@{
    ViewBag.Title = "Редактирование студента";
}
<div>
    <div class="alert alert-danger" role="alert">
        Вы сейчас редактируете студента под ID @Html.DisplayFor(model => model.Id)
    </div>
    <form asp-action="Edit" asp-controller="Student" asp-route-id="@Model.Id">
        <div class="form-group">
            <label asp-for="UserName" class="control-label">Имя</label>
            <input type="text" asp-for="UserName" value="@Model.UserName" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="First_Name" class="control-label">Имя</label>
            <input type="text" asp-for="First_Name" value="@Model.First_Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Surname" class="control-label">Фамилия</label>
            <input type="text" asp-for="Surname" value="@Model.Surname" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Middle_Name" class="control-label">Отчество</label>
            <input type="text" asp-for="Middle_Name" value="@Model.Middle_Name" class="form-control" />
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-outline-warning" />
        </div>
    </form>
</div>